{
  "id": "codex-cli",
  "version": "0.0.1",
  "name": "Codex CLI",
  "documentationURL": "https://github.com/norseto/features/tree/main/src/codex-cli",
  "description": "Installs the OpenAI Codex CLI tool using Bun. Requires the Bun feature to be installed first.",
  "options": {
    "version": {
      "type": "string",
      "proposals": [
        "latest",
        "0.1.0"
      ],
      "default": "latest",
      "description": "Version of @openai/codex to install. Use 'latest' for the most recent version."
    }
  },
  "containerEnv": {
    "BUN_INSTALL": "${containerEnv:HOME}/.bun",
    "PATH": "${containerEnv:BUN_INSTALL}/bin:${containerEnv:PATH}"
  },
  "installsAfter": [
    "ghcr.io/devcontainers/features/common-utils:1",
    "ghcr.io/audacioustux/devcontainers/bun:1"
  ],
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "bash",
            "icon": "terminal-bash"
          }
        }
      }
    }
  },
  "entrypoint": "/bin/bash"
}
